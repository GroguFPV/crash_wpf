<Page x:Class="polomka.pages.client_info_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:polomka.pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="850"
      Title="client_info_page">

    <Grid Background="White">
        <Button x:Name="backbtn" FontSize="20" 
                Height="30" Width="100" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top" 
                Margin="0,10,10,0" Click="backbtn_Click"
                Background="#FFFF9C1A">Назад</Button>
        
        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Height="250"
                        Background="LightYellow">
                <StackPanel Width="250" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <Image x:Name="client_image" 
                           Height="200" Width="200" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    
                </StackPanel>

                <StackPanel Margin="10,0,0,0" Width="500"
                            Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
                    
                    <TextBlock FontSize="25" x:Name="client_fullname_tb"
                       FontFamily="Tw Cen MT" 
                       Margin="10,0,0,0">ФИО</TextBlock>

                    <TextBlock FontSize="25" x:Name="phone_number"
                       FontFamily="Tw Cen MT"
                       Margin="10,0,0,0">Номер телефона</TextBlock>
                    <TextBlock FontSize="25" x:Name="email"
                       FontFamily="Tw Cen MT"
                       Margin="10,0,0,0">Почта</TextBlock>

                    <TextBlock FontSize="25" x:Name="date_tb"
                       FontFamily="Tw Cen MT" 
                       Margin="10,0,0,0" HorizontalAlignment="Left">2018-08-22</TextBlock>
                    <TextBlock FontSize="25" x:Name="reg_tb"
                       FontFamily="Tw Cen MT"
                       Margin="10,0,0,0">2018-08-29</TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="edit" FontSize="20" 
                Height="30" Width="200" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top" 
                Margin="0,0,10,0" 
                Background="#FFFF9C1A" Click="edit_Click">Изменить данные</Button>
                        <Button x:Name="delbtn" FontSize="20" 
                Height="30" Width="200" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top" 
                 
                Background="#FFFF9C1A" Click="delbtn_Click">Удалить данные</Button>
                    </StackPanel>
                    
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
